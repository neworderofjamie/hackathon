<?xml version="1.0"?>
<SpineML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.shef.ac.uk/SpineMLComponentLayer" xsi:schemaLocation="http://www.shef.ac.uk/SpineMLComponentLayer SpineMLComponentLayer.xsd">
 <ComponentClass name="LIF1" type="neuron_body">
  <Annotation>
   <SpineCreator/>
  </Annotation>
  <Dynamics initial_regime="integration">
   <Regime name="integration">
    <TimeDerivative variable="a">
     <MathInline>(-a+in)/tau</MathInline>
    </TimeDerivative>
    <TimeDerivative variable="a_slow">
     <MathInline>(-a_slow+in_slow)/tau</MathInline>
    </TimeDerivative>
    <OnCondition target_regime="integration">
     <StateAssignment variable="a_slow">
      <MathInline>clamp_a_slow</MathInline>
     </StateAssignment>
     <Trigger>
      <MathInline>a_slow&lt;clamp_a_slow</MathInline>
     </Trigger>
    </OnCondition>
    <OnCondition target_regime="integration">
     <StateAssignment variable="a">
      <MathInline>clamp_a</MathInline>
     </StateAssignment>
     <Trigger>
      <MathInline>a&lt;clamp_a-0.001</MathInline>
     </Trigger>
    </OnCondition>
   </Regime>
   <Alias name="out" dimension="?">
    <MathInline>m*a+c</MathInline>
   </Alias>
   <Alias name="ratio" dimension="?">
    <MathInline>(a*filter_levels-offset)/(a_slow)-10.0*(rhd/2-rhd_2)*(rhd/2-rhd_2>0)</MathInline>
   </Alias>
   <Alias name="sum_lum_out" dimension="?">
    <MathInline>sum_lum</MathInline>
   </Alias>
   <Alias name="summedrhd" dimension="?">
    <MathInline>a+a_slow</MathInline>
   </Alias>
   <Alias name="New_Alias_1" dimension="?">
    <MathInline>((a*filter_levels-offset)/(a_slow)-10.0*(rhd-a-a_slow)*(rhd-a-a_slow>0))*((a*filter_levels-offset)/(a_slow)-10.0*(rhd-rhd_2)*(rhd-rhd_2>0)>0)</MathInline>
   </Alias>
   <StateVariable name="a" dimension="V"/>
   <StateVariable name="a_slow" dimension="?"/>
  </Dynamics>
  <AnalogSendPort name="out"/>
  <AnalogReducePort name="in" reduce_op="+" dimension="?"/>
  <AnalogReducePort name="in_slow" reduce_op="+" dimension="?"/>
  <AnalogSendPort name="a_slow"/>
  <AnalogSendPort name="ratio"/>
  <AnalogReducePort name="sum_lum" reduce_op="+" dimension="?"/>
  <AnalogSendPort name="sum_lum_out"/>
  <AnalogReducePort name="rhd" reduce_op="+" dimension="?"/>
  <AnalogSendPort name="summedrhd"/>
  <AnalogReducePort name="rhd_2" reduce_op="+" dimension="?"/>
  <Parameter name="tau" dimension="s"/>
  <Parameter name="m" dimension="?"/>
  <Parameter name="c" dimension="?"/>
  <Parameter name="offset" dimension="?"/>
  <Parameter name="filter_levels" dimension="?"/>
  <Parameter name="clamp_a" dimension="?"/>
  <Parameter name="clamp_a_slow" dimension="?"/>
 </ComponentClass>
</SpineML>
