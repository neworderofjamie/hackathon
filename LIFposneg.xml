<?xml version="1.0"?>
<SpineML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.shef.ac.uk/SpineMLComponentLayer" xsi:schemaLocation="http://www.shef.ac.uk/SpineMLComponentLayer SpineMLComponentLayer.xsd">
 <ComponentClass name="LIFposneg" type="neuron_body">
  <Annotation>
   <SpineCreator/>
  </Annotation>
  <Dynamics initial_regime="integration">
   <Regime name="integration">
    <TimeDerivative variable="a">
     <MathInline>(-a+in-in_neg*detector_ratio)/tau</MathInline>
    </TimeDerivative>
    <TimeDerivative variable="a_slow">
     <MathInline>(-a_slow+in_slow-in_neg_slow*detector_ratio)/tau</MathInline>
    </TimeDerivative>
   </Regime>
   <Alias name="out" dimension="?">
    <MathInline>m*a+c</MathInline>
   </Alias>
   <StateVariable name="a" dimension="V"/>
   <StateVariable name="a_slow" dimension="?"/>
  </Dynamics>
  <AnalogSendPort name="out"/>
  <AnalogReducePort name="in" reduce_op="+" dimension="?"/>
  <AnalogReducePort name="in_neg" reduce_op="+" dimension="?"/>
  <AnalogReducePort name="in_slow" reduce_op="+" dimension="?"/>
  <AnalogReducePort name="in_neg_slow" reduce_op="+" dimension="?"/>
  <AnalogSendPort name="a_slow"/>
  <Parameter name="tau" dimension="s"/>
  <Parameter name="m" dimension="?"/>
  <Parameter name="c" dimension="?"/>
  <Parameter name="detector_ratio" dimension="?"/>
 </ComponentClass>
</SpineML>
