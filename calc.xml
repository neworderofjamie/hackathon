<?xml version="1.0"?>
<SpineML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.shef.ac.uk/SpineMLComponentLayer" xsi:schemaLocation="http://www.shef.ac.uk/SpineMLComponentLayer SpineMLComponentLayer.xsd">
 <ComponentClass name="calc" type="neuron_body">
  <Annotation>
   <SpineCreator/>
  </Annotation>
  <Dynamics initial_regime="integration">
   <Regime name="integration">
    <TimeDerivative variable="a">
     <MathInline>(-a+in-r*in_rev)/tau</MathInline>
    </TimeDerivative>
    <TimeDerivative variable="a_slow">
     <MathInline>(-a_slow+in_slow-r*in_slow_rev)/tau</MathInline>
    </TimeDerivative>
    <TimeDerivative variable="a_rev">
     <MathInline>(-a_rev+in_rev-r*in)/tau</MathInline>
    </TimeDerivative>
    <TimeDerivative variable="a_slow_rev">
     <MathInline>(-a_slow_rev+in_slow_rev-r*in_slow)/tau</MathInline>
    </TimeDerivative>
    <OnCondition target_regime="integration">
     <StateAssignment variable="a_slow">
      <MathInline>clamp_a_slow</MathInline>
     </StateAssignment>
     <Trigger>
      <MathInline>a_slow&lt;clamp_a_slow</MathInline>
     </Trigger>
    </OnCondition>
    <OnCondition target_regime="integration">
     <StateAssignment variable="a">
      <MathInline>clamp_a</MathInline>
     </StateAssignment>
     <Trigger>
      <MathInline>a&lt;clamp_a-0.001</MathInline>
     </Trigger>
    </OnCondition>
    <OnCondition target_regime="integration">
     <StateAssignment variable="a_rev">
      <MathInline>clamp_a</MathInline>
     </StateAssignment>
     <Trigger>
      <MathInline>a_rev&lt;clamp_a-0.001</MathInline>
     </Trigger>
    </OnCondition>
    <OnCondition target_regime="integration">
     <StateAssignment variable="a_slow_rev">
      <MathInline>clamp_a_slow</MathInline>
     </StateAssignment>
     <Trigger>
      <MathInline>a_slow_rev&lt;clamp_a_slow</MathInline>
     </Trigger>
    </OnCondition>
   </Regime>
   <Alias name="ratio" dimension="?">
    <MathInline>a/(a_slow+0.001)</MathInline>
   </Alias>
   <Alias name="ratio_rev" dimension="?">
    <MathInline>a_rev/(a_slow_rev+0.001)</MathInline>
   </Alias>
   <Alias name="rhd_prog" dimension="?">
    <MathInline>(a+a_slow)</MathInline>
   </Alias>
   <Alias name="rhd_reg" dimension="?">
    <MathInline>(a_rev+a_slow_rev)</MathInline>
   </Alias>
   <StateVariable name="a" dimension="V"/>
   <StateVariable name="a_slow" dimension="?"/>
   <StateVariable name="a_rev" dimension="?"/>
   <StateVariable name="a_slow_rev" dimension="?"/>
  </Dynamics>
  <AnalogReducePort name="in" reduce_op="+" dimension="?"/>
  <AnalogReducePort name="in_slow" reduce_op="+" dimension="?"/>
  <AnalogSendPort name="ratio"/>
  <AnalogReducePort name="in_rev" reduce_op="+" dimension="?"/>
  <AnalogReducePort name="in_slow_rev" reduce_op="+" dimension="?"/>
  <AnalogSendPort name="ratio_rev"/>
  <AnalogSendPort name="rhd_prog"/>
  <AnalogSendPort name="rhd_reg"/>
  <Parameter name="tau" dimension="s"/>
  <Parameter name="clamp_a" dimension="?"/>
  <Parameter name="clamp_a_slow" dimension="?"/>
  <Parameter name="r" dimension="?"/>
 </ComponentClass>
</SpineML>
